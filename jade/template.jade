doctype html
html(lang='en')
	include config
	include mixins
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		block head
			+title('Index')
			+description('The index page')

		link(rel='stylesheet', type='text/css', href='//fonts.googleapis.com/css?family=Cinzel|Lusitana')
		block styles
			link(rel='stylesheet', type='text/css', href='/css/export.css')

		//if lt IE 9
			script(src='/bower_components/html5shiv/dist/html5shiv-printshiv.min.js')
	body
		include chromeframe

		.main-wrapper
			header
				| &zwnj;
				block header
					h1 the book of satoshi
					h3 The Collected Writings of Bitcoin Creator Satoshi Nakamoto

			main
				block main
					article
						h1 Article Title
						p Lorem ipsum

		script(src='/bower_components/zepto/zepto.min.js');

		block scripts
			script(src='/js/main.js')
		include analytics